<%- include('partials/header') %>

<body class="bg-light">

  <div class="container-fluid mt-4">
    <h1 class="mb-4">My Profile</h1>

    <div class="row">
      <!-- Main Content -->
      <main class="col-md-9 col-lg-10 p-4">

        <!-- Profile Section -->
        <section id="profile" class="mb-5">
          <div class="card shadow-sm">
            <div class="card-header bg-primary text-white">My Profile</div>
            <div class="card-body">

              <div class="student-card mb-3">
                <p><strong>Name:</strong> <%= student.full_name %></p>
                <p><strong>Email:</strong> <%= student.email %></p>
                <p><strong>Course:</strong> <%= student.course %></p>
                <p><strong>Year:</strong> <%= student.year %></p>
                <p><strong>Phone:</strong> <%= student.phone || 'N/A' %></p>
                <p><strong>Address:</strong> <%= student.address || 'N/A' %></p>
                <p><strong>Date of Birth:</strong> <%= student.dob ? student.dob.toISOString().split('T')[0] : 'N/A' %></p>
                <p><strong>Gender:</strong> <%= student.gender || 'N/A' %></p>
              </div>

              <div class="academic-info mb-3">
                <h5>Academic Information</h5>
                <p><strong>10th Percentage:</strong> <%= student.tenth_percentage || 'N/A' %></p>
                <p><strong>12th Percentage:</strong> <%= student.twelfth_percentage || 'N/A' %></p>
                <p><strong>CGPA:</strong> <%= student.cgpa || 'N/A' %></p>
              </div>

              <div class="skills-resume mb-3">
                <h5>Skills & Resume</h5>
                <p><strong>Skills:</strong> <%= student.skills || 'N/A' %></p>
                <p><strong>Resume:</strong>
                  <% if (student.resume_url) { %>
                    <a href="<%= student.resume_url %>" target="_blank">View Resume</a>
                  <% } else { %>
                    N/A
                  <% } %>
                </p>
              </div>


              <a href="/students/profile/edit" class="btn btn-sm btn-outline-primary">Edit Profile</a>

            </div>
          </div>
        </section>

      </main>
    </div>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

<%- include('partials/footer') %>
