
<%- include('partials/header') %>

<div class="container mt-4">
  <h2 class="mb-4">Available Internships</h2>

  <% if (internships.length > 0) { %>
    <div class="row">
      <% internships.forEach(internship => { %>
        <div class="col-md-4 mb-4">
          <div class="card h-100 shadow-sm">
            <div class="card-body d-flex flex-column">
              <h5 class="card-title"><%= internship.title %></h5>
              <p class="card-text"><strong>Company:</strong> <%= internship.company_name %></p>
              <p class="card-text"><strong>Industry:</strong> <%= internship.industry %></p>
              <p class="card-text"><strong>Location:</strong> <%= internship.location %></p>
              <div class="mt-auto">
                <a href="/students/internships/<%= internship.internship_id %>" class="btn btn-primary btn-sm w-100">
                  View
                </a>
              </div>
            </div>
          </div>
        </div>
      <% }) %>
    </div>
  <% } else { %>
    <div class="alert alert-info">No internships available right now.</div>
  <% } %>
</div>

<%- include('partials/footer') %>
