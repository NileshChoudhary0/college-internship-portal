<%- include('partials/header') %>

<h1>All Internships</h1>

<table class="table table-striped">
  <thead>
    <th>ID</th>
    <th>Title</th>
    <th>Company</th>
    <th>Industry</th>
    <th>Location</th>
    <th>Duration</th>
    <th>Stipend</th>
    <th>Actions</th>
  </thead>
  <tbody>
    <% if (data && data.length > 0) { %>
      <% data.forEach(internship => { %>
        <tr>
          <td><%= internship.internship_id %></td>
          <td><%= internship.title %></td>
          <td><%= internship.company_name %></td>
          <td><%= internship.industry %></td>
          <td><%= internship.location %></td>
          <td><%= internship.duration %></td>
          <td><%= internship.stipend %></td>
          <td>
            <form action="/admins/internships/<%= internship.internship_id %>/delete" method="POST" style="display:inline-block;">
              <button type="submit" class="btn btn-sm btn-danger" onclick="return confirm('Are you sure?')">Delete</button>
            </form>
          </td>
        </tr>
      <% }) %>
    <% } else { %>
      <tr><td colspan="8">No internships found.</td></tr>
    <% } %>
  </tbody>
</table>

<%- include('partials/footer') %>
