
<%- include('partials/header') %>

<div class="container mt-4">
  <div class="card shadow-sm">
    <div class="card-header">
      <h3><%= internship.title %> @ <%= internship.company_name %></h3>
    </div>
    <div class="card-body">
      <p><strong>Industry:</strong> <%= internship.title %></p>
      <p><strong>Industry:</strong> <%= internship.industry %></p>
      <p><strong>Location:</strong> <%= internship.location %></p>
      <p><strong>Duration:</strong> <%= internship.duration %></p>
      <p><strong>Stipend:</strong> â‚¹<%= internship.stipend %></p>
      <p><strong>Description:</strong> <%= internship.description %></p>
      <p><strong>Type:</strong> <%= internship.internship_type %></p>
      <p><strong>Time:</strong> <%= internship.internship_timing %></p>
      <p><strong>Skills-Required:</strong> <%= internship.skills_required %></p>
      <p><strong>Experience-Required:</strong> <%= internship.experience_required %></p>


      <div class="mt-3">
        <% if (appliedIds.includes(internship.internship_id)) { %>
          <button class="btn btn-secondary btn-sm w-100" disabled>Applied</button>
        <% } else { %>
          <form action="/students/apply/<%= internship.internship_id %>" method="POST">
            <button type="submit" class="btn btn-success btn-sm w-100">Apply</button>
          </form>
        <% } %>
      </div>

      <% if (success) { %>
        <div class="alert alert-success mt-2"><%= success %></div>
      <% } %>
      <% if (error) { %>
        <div class="alert alert-danger mt-2"><%= error %></div>
      <% } %>
    </div>
  </div>
</div>

<%- include('partials/footer') %>
